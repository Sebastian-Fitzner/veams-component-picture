---
type: component
layout: lyt-docs
contextData: "picture-bp"
---

<picture class="c-picture{{#if settings.pictureContextClass}}--{{settings.pictureContextClass}}{{else}}--default{{/if}}
	{{#if settings.pictureClasses}} {{settings.pictureClasses}}{{/if}}" data-css="c-picture">

	<!--[if IE 9]><audio><![endif]-->
	{{#each content.items}}
	<source {{#if ../settings.lazyload}}data-{{/if}}srcset="{{#each srcset}}{{#unless @first}}, {{/unless}}{{src}}{{#if imageWidth}} {{imageWidth}}{{/if}}{{/each}}"
	        {{#if sizes}}sizes="{{#each sizes}}{{#unless @first}},{{/unless}}{{screenWidth}} {{imageWidth}}{{/each}}"{{/if}}
		{{#if media}} media="{{media}}"{{/if}}
		{{#if type}} type="{{type}}"{{/if}} />
	{{/each}}
		<!--[if IE 9]></audio><![endif]-->

	<img class="picture__image" src="{{content.fallbackSrc}}" alt="{{content.alt}}"/>
</picture>